:host {
  flex-basis: 49%;
  height: 300rpx;
  position: relative;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
}

.select-block {
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 5%;
  bottom: 5%;
  left: 5%;
  right: 5%;
  background: white;
  display: flex;
  flex-direction: column;
  padding: 5%;
}

.select-block-inner {
  flex-grow: 2;
  background-size: cover !important;
  background-position: center !important;
  background-repeat: no-repeat !important;
}

.select-add:before {
  font-family: "iconfont";
  content: "\e727";
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 200rpx;
  color: #666;
}

.select-block-text {
  text-align: center;
  font-size: 15px;
  padding: 3px;
}

.select-block-mask {
  display: flex;
  justify-content: space-between;
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
  transition: all ease-in-out .4s;
  background-color: rgba(0, 0, 0, .2);
  transform: scale(.8)
}

.select-block-hover>.select-block-mask {
  transform: scale(1);
  opacity: 1;
}

.mask-hover {
  background-color: rgba(0, 0, 0, .5);
  transform: scale(1) !important;
}

.icon-close {
  position: absolute;
  right: 0;
  top: 0;
  color: red;
  transform-origin: 100% 6.521744%;
  transform: translateY(-1.5px) scale(2.5);
}

.icon-close:before {
  content: "\e676";
}

.icon-picture:before {
  content: "\e61f";
}

.icon-detail:before {
  content: "\e60a";
}

.select-block-mask-inner {
  flex-basis: 49.5%;
  transition: all ease-in-out .4s;
  transform: scale(.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.select-block-mask-inner>view {
  transition: all ease-in-out .4s;
  transform: scale(1.5);
  /* color: #dddddd; */
  color: white;
}

.mask-hover>view {
  font-size: 20px;
  /* transform: scale(2); */
}