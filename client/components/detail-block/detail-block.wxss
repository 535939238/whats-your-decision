:host {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;        
    background: rgba(0, 0, 0, .1);
}

.detail-block {
    position: fixed;
    left: 10%;
    top: 10%;
    bottom: 10%;
    right: 10%;
    background: white;
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    align-items: stretch;    
}

.detail-close:before{
    content: "\e611";
}

.detail-close{
    font-family: "iconfont" !important;
    font-size: 16px;
    padding: 10px;
    position: absolute;
    right: 0;
}

.hr-bottom {
    height: 1px;
    background: #ced4da;
}

.detail-image {
    flex-basis: 40%;
    flex-grow: 2;
    background-size: cover !important;
    background-position: center !important;
    background-repeat: no-repeat !important;
    transition: all ease-in-out .4s;
}

.detail-pad {
    padding: 5%;
}

.detail-color{
    display: flex;
    flex-wrap: wrap;
}

.detail-color-each{
    margin: 15rpx;
    height: 50rpx;
    width: 50rpx;
    border-radius: 3px;
    border: 1px;
    background-size: cover !important;
    background-position: center !important;
    background-repeat: no-repeat !important;
}

input {
    border: 1px solid #ced4da;
    border-radius: 3px;
    margin-top: 10rpx;
    transition: all ease-in-out .15s;
    padding: 10rpx 25rpx;
}

input.focus,.detail-color-each.focus {    
    border-color: #80bdff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .25);
}

.certain{
    text-align: center;
    padding: 10px;
    color: white;
    background: #28a745;
    transition: background-color ease-in-out .15s;
}

.certain-hover{
    background: #1e7e34;
}