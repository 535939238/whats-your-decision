page{  
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding-left: 10%;  
  width: 80%;
}
.logo{  
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  background: rgba(255,255,255,.7);
  box-shadow: 0px 0px 15px rgba(0,0,0,.3);
  position: relative;
}
.logo>.logotext{
  position: absolute;
  width: 100%;
  height: 100%;
  background-image: url(https://wonply6i.qcloud.la/static/images/title.png);
  background-blend-mode: lighten;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  transform: scale(.7);  
}
button{
  margin-top: 12px;    
  box-shadow: 0px 0px 15px rgba(0,0,0,.3);    
  background-color: rgba(255,255,255,.7);  
  margin-right: 0;
  margin-left: 0;
  transition: all ease-in-out .2s;
}